@page "/userdetails/{id}"
@inherits UserDetailsBase


<div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
    <EditForm Model="UserTest">
        <div class="card-header">
            <h3>info: </h3>
            <h4>id: @UserTest.UserTestId </h4>

            <label for="username" class=" col-form-label">
               Name
            </label>
            <div class="col-sm-10">
                <InputText id="username" class="form-control" placeholder="UserTe"
                           @bind-Value="UserTest.UserTestNamse" />
            </div>

            <h4>name: @UserTest.UserTestNamse</h4>
            <h4>Age  @UserTest.Age  Nick: @UserTest.Nickname</h4>
        </div>

        <div class="card-footer text-center">
            <a href="/userlist" class="btn btn-primary m-1">Back</a>

            <a href="#" class="btn btn-primary m-1">Edit</a>

            <a href="#" class="btn btn-danger m-1">Delete</a>
        </div>
    </EditForm>
</div>
